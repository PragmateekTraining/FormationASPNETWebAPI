<Window x:Class="Logging.Client.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Logging.Client.WPF"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <DockPanel.DataContext>
            <local:MainViewModel></local:MainViewModel>
        </DockPanel.DataContext>
        <StackPanel DockPanel.Dock="Top">
            <Button Command="{Binding StartMonitoringCommand}"
                HorizontalAlignment="Left">GO</Button>
            <DockPanel>
                <Button Command="{Binding AddLogCommand}" DockPanel.Dock="Right">Add</Button>
                <ComboBox ItemsSource="{Binding Levels}" SelectedItem="{Binding NewLogLevel}"></ComboBox>
                <TextBox Text="{Binding NewLogMessage}" DockPanel.Dock="Left"></TextBox>
            </DockPanel>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Logs}">

        </DataGrid>
    </DockPanel>
</Window>
